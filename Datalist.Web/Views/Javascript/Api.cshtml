@model Person
@{
    ViewBag.Title = "Datalist javascript API";
}

<div class="row">
    <div class="widget example col">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Autocomplete</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
            @Html.AutoComplete("Autocomplete", new PeopleDatalist())
        </div>
    </div>
    <div class="widget example col">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Datalist</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
            @Html.Datalist("Datalist", new PeopleDatalist())
        </div>
    </div>
    <div class="widget example col">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Multi datalist</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
            @Html.Datalist("MultiDatalist", new PeopleDatalist() { Multi = true })
        </div>
    </div>
</div>

<div class="row">
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
@@Html.AutoCompleteFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleDatalist</span>())
</code>
</pre>
        </div>
    </div>
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
@@Html.DatalistFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleDatalist</span>())
</code>
</pre>
        </div>
    </div>
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
@@Html.DatalistFor(model => model.Ids, <span class="kwd">new</span> <span class="cls">PeopleDatalist</span>())
</code>
</pre>
        </div>
    </div>
</div>

<div class="row">
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>Javascript configuration</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
$(<span class="str">'.datalist'</span>).datalist({
    readonly: <span class="kwd">false</span>, <span class="com">// Datalist readonly state</span>
    preserveSearch: <span class="kwd">true</span>, <span class="com">// Indicates if dialog search value should be preserved after close</span>
    events: {
        select: <span class="kwd">function</span> (e, data, triggerChanges) {
            <span class="com">// e - event, preventing the default, prevents default datalist selection logic</span>
            <span class="com">// data - an array of selected data</span>
            <span class="com">// triggerChanges - a boolean specifying if input changes should be triggered</span>
        },
        filterChange: <span class="kwd">function</span> (e) {
            <span class="com">// e -  event, preventing the default, prevents default datalist filter change logic</span>
        }
    },
    autocomplete: {
        <span class="com">// JQuery UI autocomplete options</span>
    },
    dialog: {
        <span class="com">// JQuery UI dialog options</span>
    },
    spinner: {
        <span class="com">// JQuery UI spinner options</span>
    },
    resizable: {
        <span class="com">// JQuery UI resizable options</span>
    }
});
</code>
</pre>
        </div>
    </div>
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>Javascript methods</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
<span class="com">// Returns datalist's javascript instance</span>
$(<span class="str">'.datalist'</span>).datalist(<span class="str">'instance'</span>);

<span class="com">// Reloads the datalist</span>
$(<span class="str">'.datalist'</span>).datalist(<span class="str">'reload'</span>);

<span class="com">// Loads and selects first row</span>
$(<span class="str">'.datalist'</span>).datalist(<span class="str">'selectFirst'</span>);

<span class="com">// Loads and selects a single row, only if it's one</span>
$(<span class="str">'.datalist'</span>).datalist(<span class="str">'selectSingle'</span>);

<span class="com">// Opens datalist's dialog browser</span>
$(<span class="str">'.datalist'</span>).datalist(<span class="str">'browse'</span>);
</code>
</pre>
        </div>
    </div>
</div>
